<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardMaxElevation="@dimen/margin2dp"
    app:cardCornerRadius="@dimen/margin2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin2dp">


        <ImageView
            android:id="@+id/iv_movie_image"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_gravity="top"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin4dp">

            <TextView
                android:id="@+id/tv_movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                 />

            <TextView
                android:id="@+id/tv_movie_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                />

            <TextView
                android:id="@+id/tv_movie_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                />

            <TextView
                android:id="@+id/tv_movie_created_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>